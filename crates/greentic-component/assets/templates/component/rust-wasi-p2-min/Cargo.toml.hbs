[package]
name = "{{ name }}"
version = "{{ version }}"
edition = "2024"
license = "{{ license }}"
rust-version = "1.85"
description = "Greentic component {{ name }}"
repository = "https://github.com/{{ repo }}"
{{#if author}}
authors = ["{{ author }}"]
{{else}}
authors = ["Greentic Labs"]
{{/if}}

[lib]
crate-type = ["cdylib"]

[dependencies]
wit-bindgen = "0.44"
serde_json = "1"

[dev-dependencies]
serde_json = "1"

[build-dependencies]
anyhow = "1.0"
wit-component = "0.240"
wit-parser = "0.240"
