use {{ name_snake }}::{describe_payload, handle_message};
use greentic_interfaces_guest::component::node::InvokeResult;

#[test]
fn describe_mentions_world() {
    let payload = describe_payload();
    let json: serde_json::Value = serde_json::from_str(&payload).expect("describe should be json");
    assert_eq!(json["component"]["world"], "{{ wit_world }}");
}

#[test]
fn handle_echoes_input() {
    let response = handle_message("invoke".to_string(), "ping".to_string());
    match response {
        InvokeResult::Ok(body) => assert!(body.contains("ping")),
        other => panic!("expected Ok response, got {:?}", other),
    }
}
